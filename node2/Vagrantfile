Vagrant.configure("2") do |config|
  config.vm.box = "centos/7"
  config.vm.provider "virtualbox" do |vb|
    vb.memory = 2048
    vb.cpus = 2
    vb.gui = "true"
    vb.customize [
      "modifyvm", :id, 
      "--nic2", "hostonly", 
      "--hostonlyadapter2", "vboxnet0",
      "--nicbootprio2", "1",
      "--boot1", "net",
      "--boot3", "none",
      "--boot2", "none",
      "--boot4", "none"
      ] 
  end
end